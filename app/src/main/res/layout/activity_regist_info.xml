<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_upload_header"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_img_protrait"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传头像"
        android:textColor="@color/black_alpha_208"
        android:layout_below="@id/img_upload_header"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_upload"
        android:layout_margin="20dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的性别："
                android:textColor="@color/black_alpha_208"/>
            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男" />
                <RadioButton
                    android:id="@+id/femle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"/>
            </RadioGroup>
        </LinearLayout>
        <EditText
            android:id="@+id/et_upload_nickname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="昵称"
            android:maxLines="1"
            android:textColorHint="@color/black_alpha_208"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/et_upload_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="个人描述"
            android:textColorHint="@color/black_alpha_208"
            android:gravity="center"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/len_28"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_info_submit"
            android:layout_width="@dimen/len_172"
            android:layout_height="@dimen/len_44"
            android:gravity="center"
            android:background="@drawable/sel_btn_bg_black_alpha_44"
            android:text="提交"
            android:textColor="@color/white"
            app:gTouchColor="@color/colorAccentAlpha"
            app:gTouchCornerRadius="22dp"
            app:gTouchEffect="ripple" />

        <net.qiujuer.genius.ui.widget.Loading
            android:id="@+id/loading_info"
            android:layout_width="@dimen/len_36"
            android:layout_height="@dimen/len_36"
            android:layout_gravity="center"
            app:gAutoRun="false"
            app:gBackgroundColor="@color/trans"
            app:gForegroundColor="@color/white"
            app:gForegroundLineSize="1dp" />
    </FrameLayout>
</RelativeLayout>