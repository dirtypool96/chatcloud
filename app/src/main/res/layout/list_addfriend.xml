<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/touchable_background">
<android.support.v7.widget.CardView
    style="@style/cardStyle"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_search_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_img_protrait"
        />
    <LinearLayout
        android:layout_toRightOf="@id/iv_search_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_search_name"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的名字"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_regist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年1月3日 11:33"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"/>
    </LinearLayout>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_img_add"/>
</RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>