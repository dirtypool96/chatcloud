<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/touchable_background">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="8dp"
    card_view:cardMaxElevation="10dp"
    android:layout_margin="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_search_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_head"/>
    <LinearLayout
        android:layout_toRightOf="@id/iv_search_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_search_name"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的名字"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_regist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年1月3日 11:33"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_login_selector"
        android:text="添加好友"
        android:textColor="#fff"/>
</RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>