<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AcceptCallActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hyphenate.media.EMOppositeSurfaceView
            android:id="@+id/oppo_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.hyphenate.media.EMLocalSurfaceView
            android:id="@+id/local_surface"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
    </FrameLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_accept_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_img_protrait"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/tv_accept_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textColor="#000"
        android:textSize="22sp"
        android:layout_below="@id/img_accept_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bt_accept_end"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:backgroundTint="@color/red_300"
            app:rippleColor="@color/red_500"
            app:elevation="8dp"
            app:pressedTranslationZ="20dp"
            android:src="@drawable/ic_img_callend"
            android:layout_gravity="center"
            android:visibility="invisible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="15dp"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_accept_ensure"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="@color/green_300"
                app:rippleColor="@color/green_500"
                app:elevation="8dp"
                app:pressedTranslationZ="20dp"
                android:src="@drawable/ic_img_callstart"
                android:layout_marginRight="30dp"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_accept_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="@color/red_300"
                app:rippleColor="@color/red_500"
                app:elevation="8dp"
                app:pressedTranslationZ="20dp"
                android:src="@drawable/ic_img_callend"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>