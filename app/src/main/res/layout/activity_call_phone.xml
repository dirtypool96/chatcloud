<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/local_surfaceview"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            >
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/opposite_surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_call_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_img_protrait"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/tv_call_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textColor="#000"
        android:textSize="22sp"
        android:layout_below="@id/img_call_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bt_call_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        app:backgroundTint="@color/red_300"
        app:rippleColor="@color/red_500"
        app:elevation="8dp"
        app:pressedTranslationZ="20dp"
        android:src="@drawable/ic_img_callend"
        />
</RelativeLayout>